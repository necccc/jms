#!/bin/bash

start() {

    pm2 start processes.json

}

stop() {

    pm2 delete processes.json

}

deploy () {

	node bin/jms-deploy.js

}

restart () {

    pm2 restart processes.json

}

status () {

    echo "Todo"

}


case "$1" in
	start)
		start
	;;
	stop)
		stop
	;;
	status)
		status
	;;
	deploy)
		deploy
	;;
	restart|reload)
		restart
	;;
*)
	echo $"Usage: $0 {start|stop|restart|deploy|status}"
	exit 1
esac
exit 0
