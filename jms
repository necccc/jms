#!/bin/bash

NAME=jms
DESC="Javascript Module Server"
BASEDIR=$(dirname $0)

checkdirs() {
    if [ ! -d "$BASEDIR/pid" ]; then
        mkdir "$BASEDIR/pid"
    fi

    if [ ! -d "$BASEDIR/logs" ]; then
            mkdir "$BASEDIR/logs"
    fi
}

start() {

    checkdirs

    cd $BASEDIR
    pm2 start processes.json > /dev/null 2>&1
    RET=$?
    exit $RET
}

stop() {

    cd $BASEDIR
    pm2 delete processes.json > /dev/null 2>&1
    RET=$?
    exit $RET

}

deploy () {

    cd $BASEDIR
	node bin/jms-deploy.js

}

restart () {

    checkdirs

    cd $BASEDIR
    pm2 restart jms > /dev/null 2>&1
    RET=$?
    exit $RET

}

status () {

    cd $BASEDIR
    node bin/status.js
    RET=$?
    exit $RET
}


case "$1" in
	start)
		start
	;;
	stop)
		stop
	;;
	status)
		status
	;;
	deploy)
		deploy
	;;
	restart|reload)
		restart
	;;
*)
	echo $"Usage: $0 {start|stop|restart|deploy|status}"
	exit 1
esac
exit 0
